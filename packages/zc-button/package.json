{
  "name": "zc-button",
  "version": "1.0.7",
  "description": "A simple reusable button component",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/zc-button.mjs",
  "es2017": "dist/esm/zc-button.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/zc-button/zc-button.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "pubGithub": "npm config set registry https://npm.pkg.github.com/@zaphodando && npm publish",
    "pubNpm": "npm config set registry https://registry.npmjs.org/ && npm publish"
  },
  "devDependencies": {
    "@stencil/core": "^1.8.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://github.com/ZaphodAndo/zaphods-components.git",
    "directory": "packages/zc-button"
  },
  "keywords": [
    "web component",
    "button",
    "stencil"
  ]
}
